---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout>
	<Navigation currentPath="/" />
	<main class="gallery-main">
		<div class="container">
			<section class="hero">
				<h1>Αμiρ</h1>
				<p>this is my personal website!</p>
			</section>
			
			<section class="gallery-grid">
				<a href="/designs" class="design-card">
					<div class="design-image">
						<img src="/goat.png" alt="Goat illustration" />
					</div>
				</a>
			</section>
			
			<div class="gallery-caption">
				<p>designs</p>
			</div>
		</div>
	</main>
</Layout>

<style>
	.gallery-main {
		min-height: 100vh;
		padding: 2rem 0;
	}

	.hero {
		text-align: center;
		margin-bottom: 3rem;
		padding: 2rem 0;
	}

	.hero h1 {
		font-size: 3rem;
		color: var(--warm-brown);
		margin-bottom: 1rem;
		font-weight: 700;
	}

	.hero p {
		font-size: 1.2rem;
		color: var(--text-light);
		max-width: 600px;
		margin: 0 auto;
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: 1fr;
		justify-items: center;
		gap: 2rem;
		margin-bottom: 3rem;
	}

	.design-card {
		max-width: 400px;
		width: 100%;
		background: transparent;
		border-radius: 12px;
		overflow: hidden;
		box-shadow: none;
		transition: all 0.3s ease;
		border: none;
	}

	.design-card:hover {
		transform: translateY(-5px);
		box-shadow: none;
	}

	.design-image {
		width: 100%;
		height: 250px;
		overflow: hidden;
	}

	.design-image img {
		width: 100%;
		height: 100%;
		object-fit: contain;
		transition: transform 0.3s ease;
	}

	.design-card:hover .design-image img {
		transform: scale(1.05);
	}

	.gallery-caption {
		text-align: center;
		margin-top: 1rem;
	}

	.gallery-caption p {
		font-size: 1.1rem;
		color: var(--text-light);
		font-style: italic;
	}

	@media (max-width: 768px) {
		.hero h1 {
			font-size: 2.2rem;
		}

		.hero p {
			font-size: 1rem;
		}

		.gallery-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.design-card {
			margin: 0 1rem;
		}
	}

	@media (max-width: 480px) {
		.gallery-grid {
			grid-template-columns: 1fr;
		}

		.design-card {
			margin: 0 0.5rem;
		}
	}
</style>