---
const { currentPath } = Astro.props;
---

<nav class="navigation">
	<div class="nav-container">
		<div class="logo">
			<a href="/">Αμiρ</a>
		</div>
		<div class="nav-tabs">
			<a href="/" class={currentPath === '/' ? 'active' : ''}>Homepage</a>
			<a href="/designs" class={currentPath === '/designs' ? 'active' : ''}>Designs</a>
			<a href="/journal" class={currentPath === '/journal' ? 'active' : ''}>Journal</a>
		</div>
	</div>
</nav>

<style>
	.navigation {
		background: rgba(247, 243, 233, 0.95);
		backdrop-filter: blur(10px);
		border-bottom: 2px solid var(--light-brown);
		position: sticky;
		top: 0;
		z-index: 100;
		transition: all 0.3s ease;
	}

	.nav-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1.5rem 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo a {
		font-family: 'Playfair Display', serif;
		font-size: 1.8rem;
		font-weight: 700;
		color: var(--warm-brown);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.logo a:hover {
		color: var(--darker-brown);
	}

	.nav-tabs {
		display: flex;
		gap: 2rem;
	}

	.nav-tabs a {
		padding: 0.75rem 1.5rem;
		color: var(--text-light);
		text-decoration: none;
		font-weight: 400;
		border-radius: 25px;
		transition: all 0.3s ease;
		position: relative;
	}

	.nav-tabs a:hover {
		color: var(--warm-brown);
		background: rgba(210, 180, 140, 0.2);
	}

	.nav-tabs a.active {
		color: var(--cream);
		background: var(--warm-brown);
		box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
	}

	@media (max-width: 768px) {
		.nav-container {
			padding: 1rem;
			flex-direction: column;
			gap: 1rem;
		}

		.logo a {
			font-size: 1.5rem;
		}

		.nav-tabs {
			gap: 1rem;
		}

		.nav-tabs a {
			padding: 0.5rem 1rem;
			font-size: 0.9rem;
		}
	}
</style>